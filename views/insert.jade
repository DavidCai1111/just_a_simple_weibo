//to insert weibo
extends layout

block content
  .row
    h1.text-center insert weibo
    form.form-horizontal.col-md-6.col-md-offset-3(action="/admin/insert",method="post")
      input(type="hidden",name="wb[name]",value="#{user.name}")
      .form-group
        label.col-sm-2(for="inputContent") #{user.name} 说：
        .col-sm-10
          input.form-control#inputContent(type="textarea",name="wb[content]")
      .col-sm-offset-2.col-sm-10
        button.btn.btn-primary(type="submit") 录入
